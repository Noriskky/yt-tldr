{
  "manifest_version": 3,
  "name": "YouTube TL;DR",
  "version": "1.0",
  "description": "Get AI-powered summaries of YouTube videos",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["*://*.youtube.com/*", "http://localhost:8000/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["marked.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["*://*.youtube.com/*"]
  }]
}
